<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Montserrat:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <!-- Bootstrap cdn -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <!-- Font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Title -->
    <title>Cinelab Data</title>
  </head>
  <body>
    Lorem ipsum dolor sit, amet consectetur adipisicing elit. Sed, maiores placeat. Deleniti et dignissimos vero cum possimus sint saepe, nobis autem perspiciatis ad, reiciendis tenetur eius a, accusamus praesentium assumenda!
    <!-- navbarre -->

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-primary fixed-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"> <i id="icon" class="fa-solid fa-camera-movie"></i> Cinelab Movies</a>
          
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 justify-content-center align-items-center d-flex">
              <li class="nav-item">
                <a id="navLink" class="nav-link" href="/">Ma liste </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/mylist">
                    <i id="data1" class="fa-solid fa-database"></i>
                  <span id="cart-counter">0</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      
  


    <h1 id="searchheading">
      Résultat de la recherche <span style="color: gray"> > </span> <%= searchQuery.toUpperCase() %></h1>

    <% data["results"].forEach((movie) => { %>

    <div class="card mb-5 w-75">
      <div class="row no-gutter">
        <div class="col-md-4">
          <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2<%= movie["backdrop_path"] %>" alt="" class="card-img img-fluid" />
        </div>

        <div class="col-md-8">
          <div class="card-body">
            <h2 class="card-title"><%= movie["original_title"] %></h2>
            <hr />
            <p class="card-text"><%= movie["overview"] %></p>
            <hr />
            <br />
            <p class="card-text"><b>Date de publication:</b> <%= movie["release_date"] %></p>
            <p class="card-text"><b>Total votes:</b> <%= movie["vote_count"] %></p>
            <p class="card-text"><b>Average Rating:</b> <%= movie["vote_average"] %></p>
            <hr />
            <button class="btn btn-primary" onclick="addToMyList('<%= movie.id %>')">Ajouter à ma liste</button>
          </div>
        </div>
      </div>
    </div>
    <script src="script.js"></script>
    <% }) %>
  </body>
</html>
